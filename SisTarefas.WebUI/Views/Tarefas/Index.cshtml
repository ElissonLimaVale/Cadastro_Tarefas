<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ola mundo</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        #teste {
            background-color: royalblue;
            padding: 10px 25px;
            border: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>Helo World</h1>

    <button id="teste">Cadastrar</button>

    <script>
        $(document).ready(() => {
            $("#teste").on("click", () => {
                $.ajax({
                    method: "Post",
                    url: "../Tarefas/Cadastrar"
                }).done((data) => {
                    alert(data.message);
                }).fail(() => {
                    alert("Ops, ocorreu um erro inesperado durante a requisição");
                });
            });
        })
    </script>
</body>
</html>